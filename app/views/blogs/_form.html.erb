<%require "time"%>
<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, id: :blog_titulo %>
  </div>

  <div class="field">
    <%= form.label :mensagem %>
    <%= form.text_area :mensagem, id: :blog_mensagem %>
  </div>

  <div class="field">
    <%= form.label :usuario %>
    <%= form.text_field :usuario,:value=> current_user.email, readonly:  true  %>
    </div>


  <div class="field">
    <%= form.label :data %>
    <%= form.datetime_select :data, :value=> Time.zone.now, readonly: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
