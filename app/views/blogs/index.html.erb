<p id="notice"><%= notice %></p>

<h2>Blog</h2>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Usuario</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.titulo %></td>
        <td><%= blog.usuario %></td>
        <td><%= blog.data %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Tem certeza??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_blog_path %>
